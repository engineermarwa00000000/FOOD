<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img7">

    <LinearLayout
        android:layout_width="@dimen/dp250w"
        android:layout_height="@dimen/dp400h"
        android:id="@+id/linearlayout"
        android:background="@drawable/white_bg"
        android:padding="20dp"
        android:layout_marginTop="@dimen/dp100h"
        android:layout_marginStart="@dimen/dp35w"
        android:layout_marginLeft="@dimen/dp35w"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_phone_nomber"
            android:layout_gravity="center"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            android:textColor="#090909"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:orientation="horizontal"/>

        <com.hbb20.CountryCodePicker
            android:layout_width="@dimen/dp120w"
            android:layout_height="@dimen/dp40h"
            android:id="@+id/CountryCode" />

        <EditText
            android:layout_width="@dimen/dp132w"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8w"
            android:inputType="number"
            android:id="@+id/number"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:id="@+id/otp"
            android:layout_marginTop="@dimen/dp30h"
            android:background="@drawable/btn_bg_green"
            android:textColor="@color/white"
            android:text="@string/send_otp"
            android:textSize="@dimen/sp18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acsignup"
            android:layout_marginTop="@dimen/dp13h"
            android:text="@string/dont_have_an_account_sign_up"
            android:textSize="@dimen/sp15"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="@dimen/dp100w"
                android:layout_height="@dimen/dp1h"
                android:layout_marginTop="@dimen/dp20h"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/OR"
                android:text="@string/or1"
                android:layout_marginTop="@dimen/dp13h"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />

            <TableRow
                android:id="@+id/dr"
                android:layout_width="@dimen/dp105w"
                android:layout_height="@dimen/dp1h"
                android:layout_marginTop="@dimen/dp20h"
                android:background="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signphone"
            android:layout_marginTop="@dimen/dp20h"
            android:text="@string/signin_with"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="#090909"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="@dimen/dp105w"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20h"
            android:background="@drawable/btn_red"
            android:drawableLeft="@drawable/white_mail"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/email"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>