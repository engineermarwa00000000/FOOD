<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="@dimen/dp280w"
        android:layout_height="@dimen/dp460h"
        android:layout_marginStart="@dimen/dp22w"
        android:layout_marginLeft="@dimen/dp22w"
        android:layout_marginTop="@dimen/dp50h"
        android:background="@drawable/white_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Lemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:paddingBottom="@dimen/dp10h" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mail_bll"
            android:drawablePadding="10dp"
            android:hint="@string/email_Id"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Lpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:paddingBottom="@dimen/dp5h"
            app:passwordToggleEnabled="true" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp100w"
            android:text="@string/forget_password"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp16" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:layout_marginTop="@dimen/dp20h"
            android:background="@drawable/btn_bg_green"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10h"
            android:gravity="center"
            android:text="@string/don_t_ave_an_account_create"
            android:textColor="#090909"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10w"
            android:layout_marginLeft="@dimen/dp10w"
            android:layout_marginTop="@dimen/dp10h"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="@dimen/dp100w"
                android:layout_height="@dimen/dp1h"
                android:layout_marginTop="@dimen/dp20h"
                android:background="@color/black" />

            <TextView
                android:id="@+id/OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/dp13h"
                android:gravity="center_horizontal"
                android:text="@string/or1"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TableRow
                android:id="@+id/hr1"
                android:layout_width="@dimen/dp105w"
                android:layout_height="@dimen/dp1h"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/dp20h"
                android:background="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/signphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp11h"
            android:text="SignIn With"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp18" />

        <Button
            android:id="@+id/btnphone"
            android:layout_width="@dimen/dp105w"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp13h"
            android:background="@drawable/btn_bg_blue"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:padding="10dp"
            android:text="@string/phonee"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>